{
    "compilerOptions": {
        "target": "es6",
        "outDir": "dist",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "removeComments": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "inlineSourceMap": true
    },
    "include": [
        "src/**/*",
        "test/**/*.ts",
        "typings/**/*",
        "node_modules/@types/**/*"
    ]
}
